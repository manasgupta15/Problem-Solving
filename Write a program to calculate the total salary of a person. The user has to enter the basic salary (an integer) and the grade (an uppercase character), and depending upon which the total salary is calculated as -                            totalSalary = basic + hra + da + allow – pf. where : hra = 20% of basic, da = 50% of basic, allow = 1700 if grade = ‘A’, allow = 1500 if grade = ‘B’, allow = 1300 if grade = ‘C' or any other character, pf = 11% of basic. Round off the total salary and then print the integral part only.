basic_salary=int(input("enter the basic salary"))
grade=input("enter the grade")
HRA=0.2*basic_salary
DA=0.5*basic_salary
PF=0.11*basic_salary
if(grade=='A'):
    allow=1700
elif(grade=='B'):
    allow=1500
elif(grade=='C'):
    allow=1300
else:
    allow=1300
total_salary=basic_salary+HRA+DA+allow-PF
print(round(total_salary))
